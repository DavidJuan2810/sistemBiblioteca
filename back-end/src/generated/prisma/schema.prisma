generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum rol {
  Administrador
}

model usuario {
  id          Int      @id @default(autoincrement())
  correo      String   @unique
  contrase√±a String
  rol         rol      @default(Administrador)
  fecha       DateTime @default(now())
}

model bibliotecas {
  id        Int     @id @default(autoincrement())
  nombre    String  @unique
  ubicacion String
  libros    libro[] @relation("libroSede")
}

model libro {
  id          Int           @id @default(autoincrement())
  titulo      String        @unique
  publicacion DateTime
  sede        bibliotecas[] @relation("libroSede")
  autores     autor[]       @relation("autorLibro")
}

model autor {
  id           Int     @id @default(autoincrement())
  nombre       String  @unique
  nacionalidad String
  libro        libro[] @relation("autorLibro")
}
